{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites":[
      {
        "source": "/signup",
        "destination": "/signup.html"
      },
      {
        "source": "/profile",
        "destination": "/profile.html"
      },
      {
        "source": "/edit",
        "destination": "/edit.html"
      },      
      {
        "source": "/merge",
        "destination": "/merge.html"
      }
    ]
  }
}
